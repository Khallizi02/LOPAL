programa {
  funcao inicio() {

    inteiro area, b, h 

    escreva("Quanto mede em centimetros a base do triangulo?\n")
    leia(b)

    limpa()

    escreva("Quanto mede em centimetros a altura do triangulo?\n")
    leia(h)

    limpa()

    area = (b * h) / 2

    escreva("A areá do triangulo mede: " ,area, "cm")
  }
}
